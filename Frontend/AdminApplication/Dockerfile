FROM node:10-alpine as build-step
RUN mkdir /app
WORKDIR /app
COPY package.json /app
RUN npm install
COPY . /app
ARG REACT_APP_FIREBASE_API_KEY_ARG
ENV REACT_APP_FIREBASE_API_KEY=$REACT_APP_FIREBASE_API_KEY_ARG
ARG REACT_APP_FIREBASE_API_DOMAIN_ARG
ENV REACT_APP_FIREBASE_API_DOMAIN=$REACT_APP_FIREBASE_API_DOMAIN_ARG
ARG REACT_APP_FIREBASE_API_PROJECT_ID_ARG
ENV REACT_APP_FIREBASE_API_PROJECT_ID=$REACT_APP_FIREBASE_API_PROJECT_ID_ARG
ARG REACT_APP_FIREBASE_API_STORAGE_BUCKET_ARG
ENV REACT_APP_FIREBASE_API_STORAGE_BUCKET=$REACT_APP_FIREBASE_API_STORAGE_BUCKET_ARG
ARG REACT_APP_FIREBASE_API_MESSAGING_SENDER_ID_ARG
ENV REACT_APP_FIREBASE_API_MESSAGING_SENDER_ID=$REACT_APP_FIREBASE_API_MESSAGING_SENDER_ID_ARG
ARG REACT_APP_FIREBASE_APP_ID_ARG
ENV REACT_APP_FIREBASE_APP_ID=$REACT_APP_FIREBASE_APP_ID_ARG
ARG REACT_APP_GOOGLE_MAP_KEY_ARG
ENV REACT_APP_GOOGLE_MAP_KEY=$REACT_APP_GOOGLE_MAP_KEY_ARG
RUN npm run build




FROM nginx:1.17.1-alpine
COPY --from=build-step /app/build /usr/share/nginx/html
EXPOSE 80
ENTRYPOINT ["nginx","-g","daemon off;"]
